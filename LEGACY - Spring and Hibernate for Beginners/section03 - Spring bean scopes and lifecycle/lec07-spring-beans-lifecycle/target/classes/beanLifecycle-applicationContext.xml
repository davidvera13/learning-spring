<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <bean
            id="fortuneServiceBean"
            class="spring.learning.service.RandomFortuneService">
    </bean>

    <bean
            id="trackCoachBean"
            class="spring.learning.coach.impl.TrackCoach"
            init-method="onInit"
            destroy-method="onDestroy">
        <constructor-arg ref="fortuneServiceBean" />
    </bean>

    <!-- for prototype, we have to customize code    -->
    <!-- creating processor    -->
    <bean
        id="appProcessorBean"
        class="spring.learning.config.AppProcessorBean">
    </bean>

    <bean
            id="baseballCoachBean"
            class="spring.learning.coach.impl.BaseballCoach"
            init-method="onInit"
            destroy-method="destroy">
        <constructor-arg ref="fortuneServiceBean" />
    </bean>

    <!-- import singleton & prototype -->
    <bean
        id="cricketCoachBean"
        class="spring.learning.coach.impl.CricketCoach"
        scope="prototype">
        <property
                name="fortuneService"
                ref="fortuneServiceBean"
        />
    </bean>

    <!-- singleton    -->
    <bean
            id="tennisCoachBean"
            class="spring.learning.coach.impl.TennisCoach">
        <constructor-arg ref="fortuneServiceBean" />
    </bean>
    <bean id="loggerConfig" class="spring.learning.config.LoggerConfig" init-method="initLogger">
        <property name="rootLoggerLevel" value="FINE" />
        <property name="printedLoggerLevel" value="FINE"/>
    </bean>
</beans>